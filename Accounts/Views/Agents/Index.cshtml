

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAgents.cshtml";
}




<div class="container">
    <div class="row">
        @await Html.PartialAsync("_NavPartial")
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Registration</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="input"></div>
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
                        <span data-feather="calendar"></span>
                        This week
                    </button>
                    <div class="calendar"></div>
                </div>
            </div>
            
            <h2>Section title</h2>
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Id Number</th>
                                <th>First Name</th>
                                <th>Middle Name</th>
                                <th>Last Name</th>
                                <th>Phone Number</th>
                                <th>Subcounty</th>
                                <th>Ward</th>
                                <th>User Name</th>
                                
                                
                               

                            </tr>
                        </thead>
                    </table>
                </div>
        </main>
    </div>
</div>
@section Scripts {
<script type="text/javascript">
        
        $(document).ready(function () {
            $('#example').DataTable({
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "ajax": {
                    "url": "/Agents/LoadData",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs":
                [{
                        "targets": [0],
                        "visible": true,
                    "searchable": false
                }
                
                ],
                "columns": [  
                     { "data": "Id", "name": "ID", "autoWidth": true }, 
                      { "data": "IdNumber", "name": "Id Number", "autoWidth": true },  
                      { "data": "FirstName", "name": "First Name", "autoWidth": true },
                      { "data": "MiddleName", "name": "Middle Name", "autoWidth": true },  
                      { "data": "LastName",  "name": "Last Name", "autoWidth": true },  
                      { "data": "PhoneNumber", "name": "Phone Number", "autoWidth": true },  
                      { "data": "SUBCOUNTY", "name": "SUB COUNTY", "autoWidth": true },  
                      { "data": "WARD", "name": "WARD", "autoWidth": true },  
                      { "data": "UserName", "name": "User Name", "autoWidth": true } 
                ] 
            });
        });
       
</script>
}
